/***********************************************************************************************************
**	function databanco():
**  Retorna a data para dar entrada no banco de dados
************************************************************************************************************/
function databanco($data)
{
	$dia = substr($data,8,2);
	$mes = substr($data,5,2);
	$ano = substr($data,0,4);
	return $dia."-".$mes."-".$ano;
}
