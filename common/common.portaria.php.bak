/***********************************************************************************************************
**	function dataarq(AMD):
**  Tipo de Pessoa = Júrica ou Física
************************************************************************************************************/
function dataarq($data)
{
	$dia = substr($data,0,2);
	$mes = substr($data,3,2);
	$ano = substr($data,6,4);
	return $ano.'-'.$mes.'-'.$dia;
}

