************************************************************************************************************/

function MostreCentro($centro)
{
	global $mysql_centros_table;

	$sql = "select nome from gvendas.centros where centro = '".$centro."' order by centro";
	$result = execsql($sql);
	$row = mysql_fetch_row($result);
	return $row[0];
}

